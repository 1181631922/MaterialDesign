<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fanyafeng.materialdesign.activity.FloatingActionButtonActivity"
    tools:showIn="@layout/activity_floating_action_button">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--src icon-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/send"
            app:backgroundTint="@android:color/primary_text_dark" />
        <!--backgroundTint 背景色-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:rippleColor="@android:color/holo_red_light" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:rippleColor="@android:color/holo_red_light" />
        <!--elevation z轴-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:elevation="@dimen/activity_horizontal_margin"
            app:rippleColor="@android:color/holo_red_light" />
        <!--fabSize 大小-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:elevation="@dimen/activity_horizontal_margin"
            app:fabSize="mini"
            app:rippleColor="@android:color/holo_red_light" />
        <!--backgroundTintMode 图标显示模式-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:backgroundTintMode="screen"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:elevation="@dimen/activity_horizontal_margin"
            app:pressedTranslationZ="@dimen/activity_horizontal_margin"
            app:rippleColor="@android:color/holo_red_light" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:backgroundTintMode="src_atop"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:elevation="@dimen/activity_horizontal_margin"
            app:pressedTranslationZ="@dimen/activity_horizontal_margin"
            app:rippleColor="@android:color/holo_red_light" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:backgroundTintMode="multiply"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:elevation="@dimen/activity_horizontal_margin"
            app:pressedTranslationZ="@dimen/activity_horizontal_margin"
            app:rippleColor="@android:color/holo_red_light" />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/notifation"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:borderWidth="@dimen/activity_horizontal_margin"
            app:elevation="@dimen/activity_horizontal_margin"
            app:pressedTranslationZ="@dimen/activity_horizontal_margin"
            app:rippleColor="@android:color/holo_red_light" />




    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

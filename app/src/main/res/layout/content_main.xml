<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fanyafeng.materialdesign.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSnackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试snackbar"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试Float"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试EditText"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试DrawerLayout"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试tablayout"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestToolbarEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试toobarenter"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestToolbarExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试toobarexit"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestStagger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试stagger"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试BottomSheet"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnToolbarViewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试toolbar和viewpager的嵌套"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/btnTestV7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试v7控件"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="@dimen/activity_horizontal_margin" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
